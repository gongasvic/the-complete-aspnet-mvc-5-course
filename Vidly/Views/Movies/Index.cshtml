@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>

@Html.ActionLink("New Movie", "New", null, new { @class = "btn btn-primary" })

<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@Html.ActionLink(movie.Name, "Details", new { id = movie.Id })</td>
                <td>@movie.MovieGenre.Name</td>
            </tr>
        }
    </tbody>
</table>
